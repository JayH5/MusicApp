<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistBrowserActivity" >

    <FrameLayout 
        android:id="@+id/summaryFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    
    <View 
        android:id="@+id/summaryBorder"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/summaryFrame"
        android:background="@drawable/gradient_now_bottom_border" />
    
    <FrameLayout 
        android:id="@+id/listFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summaryBorder"
        android:layout_alignParentLeft="true" />

</RelativeLayout>