<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_widget_container"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/blackish" >
    
    <LinearLayout
        android:id="@+id/app_widget_info_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/app_widget_button_container"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/app_widget_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/app_widget_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/app_widget_button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:divider="?android:listDivider"
        android:dividerPadding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <ImageButton
            android:id="@+id/app_widget_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_previous" />

        <ImageButton
            android:id="@+id/app_widget_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_play" />

        <ImageButton
            android:id="@+id/app_widget_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_next" />
    </LinearLayout>
    
    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark" />

</RelativeLayout>
