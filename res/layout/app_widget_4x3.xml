<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_widget_container"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:columnCount="2"
    android:rowCount="3"
    android:background="@color/blackish" >
    
    <ImageView
        android:id="@+id/app_widget_album_art"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop" />
    
    <LinearLayout
        android:id="@+id/app_widget_info_container"
        android:layout_width="0dp"
        android:layout_gravity="fill"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/app_widget_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/app_widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/app_widget_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/app_widget_button_container"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="fill_horizontal"
        android:divider="?android:listDivider"
        android:dividerPadding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:layout_columnSpan="2" >
        
        <ImageButton
            android:id="@+id/app_widget_shuffle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_shuffle" />

        <ImageButton
            android:id="@+id/app_widget_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_previous" />

        <ImageButton
            android:id="@+id/app_widget_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_play" />

        <ImageButton
            android:id="@+id/app_widget_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_playback_next" />
        
        <ImageButton
            android:id="@+id/app_widget_repeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_repeat" />

    </LinearLayout>
    
    <ImageView
        android:layout_columnSpan="2"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@android:color/holo_blue_dark" />

</GridLayout>
